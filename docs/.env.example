# =============================================================================
# Reptile Habitat Automation System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control (contains secrets)
# =============================================================================

# ═══════════════════════════════════════════════════════════════════
# MongoDB Configuration
# ═══════════════════════════════════════════════════════════════════
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=reptilia

# ═══════════════════════════════════════════════════════════════════
# Kasa Smart Outlet Configuration
# ═══════════════════════════════════════════════════════════════════
KASA_IP=192.168.1.100
KASA_USERNAME=your-email@example.com
KASA_PASSWORD=your-kasa-password

# Outlet mapping: maps outlet IDs to physical powerstrip plug numbers (1-based)
# Format: JSON object {"outlet-id": plug_number, ...}
KASA_OUTLET_MAPPING={"basking-heat-lamp": 1, "ambient-heater": 2, "humidifier": 3, "uvb-light": 4}

# ═══════════════════════════════════════════════════════════════════
# BLE Sensor Configuration - Xiaomi LYWSD03MMC
# ═══════════════════════════════════════════════════════════════════
# Warm side (basking area) sensor
SENSOR_WARM_SIDE_ADDRESS=XX:XX:XX:XX:XX:XX
SENSOR_WARM_SIDE_ID=basking-temp-sensor

# Cool side sensor
SENSOR_COOL_SIDE_ADDRESS=XX:XX:XX:XX:XX:XX
SENSOR_COOL_SIDE_ID=cool-temp-sensor

# Sensor connection settings
SENSOR_CONNECTION_TIMEOUT=30.0
SENSOR_MAX_RETRIES=3
SENSOR_RETRY_DELAY=2.0

# ═══════════════════════════════════════════════════════════════════
# Location Settings (for sunrise/sunset calculation)
# ═══════════════════════════════════════════════════════════════════
# Find your coordinates at: https://www.latlong.net/
HABITAT_LATITUDE=35.0458
HABITAT_LONGITUDE=-85.3094
HABITAT_TIMEZONE=America/New_York

# ═══════════════════════════════════════════════════════════════════
# Polling Configuration
# ═══════════════════════════════════════════════════════════════════
# Interval between sensor readings and control checks (in seconds)
POLLING_INTERVAL_SECONDS=3600
